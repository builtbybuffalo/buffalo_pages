<% content_for :heading, "Import Page Blueprints" %>

<% content_for :actions do %>
	<%= render "admin/content/page_blueprints/additional_actions" %>
<% end %>

<p class="help-block">
	<small>Please note, this is a <strong>nondestructive</strong> act. No entries will deleted, however they maybe updated with new text or have fields added to them. Always ensure you have a database backup before continuing. No warnings will be displayed before the form is submitted. </small>
</p>

<%= form_for :import, url: admin_content_page_blueprints_process_path do |f| %>
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<label>Page Blueprint JSON</label>
				<%= f.text_area :json, value: params[:import].try(:[], :json), class: "form-control js-check-json input-large", style: "width: 100%; height: 500px" %>
				<p class="help-block">
					<small>Paste in the JSON from the <%= link_to "export screen", admin_content_page_blueprints_export_path %>. </small>
				</p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<hr>
			<a href="<%= url_for :back %>" class="btn btn-link">Cancel</a>
			<button type="submit" class="btn btn-danger">Import</button>
		</div>
	</div>
<% end %>
