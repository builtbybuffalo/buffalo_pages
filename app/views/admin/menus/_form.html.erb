<div class="row">
	<div class="col-md-6">
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
			<%= f.errors_for :title %>
			<%= f.help_text "The article title" %>
		</div>
	</div>
	<div class="col-md-12">
		<%= f.label :menu_items %>
		<%= f.help_text "Add items to the menu." %>

		<div class="row">
			<div class="col-md-12">
				<ul class="js-sortable sortable row">
					<%= f.nested_fields_for :menu_items, wrapper_tag: :li, wrapper_options: { class: "" } do |i| %>
						<%= i.hidden_field :position, class: "js-position" %>
						<div class="row">
							<div class="col-md-2 col-lg-1 col-sm-2">
								<%= i.remove_nested_fields_link "X", class: "btn btn-danger btn-xs delete" %>
								<span class="js-handle handle-icon icon handle glyphicon glyphicon-resize-vertical"></span>
								<%= i.add_nested_fields_link :menu_items, "+", class: "btn btn-info btn-xs" %>
							</div>
							<div class="col-md-5 col-lg-5 col-sm-5">
								<%= i.text_field :title, class: "form-control", placeholder: "The title of the item" %>
							</div>
							<div class="col-md-5 col-sm-5">
								<%= i.text_field :url, class: "form-control", placeholder: "The URL - which should start with a /" %>
							</div>
							<ul class="js-sortable sortable row">
								<%= i.nested_fields_for :menu_items, wrapper_tag: :li, wrapper_options: { class: "col-xs-push-1 col-xs-11" } do |ff| %>
									<%= ff.hidden_field :position, class: "js-position" %>
									<br>
									<div class="row">
										<div class="col-xs-1">
											<%= ff.remove_nested_fields_link "X", class: "btn btn-danger btn-xs delete" %>
											<span class="js-handle handle-icon icon handle glyphicon glyphicon-resize-vertical"></span>
										</div>
										<div class="col-md-5">
											<%= ff.text_field :title, class: "form-control", placeholder: "The title of the item" %>
										</div>
										<div class="col-md-6">
											<%= ff.text_field :url, class: "form-control", placeholder: "The URL - which should start with a /" %>
										</div>
									</div>
								<% end %>
							</ul>
						</div>
						<div class="col-xs-12"><hr></div>
					<% end %>
				</ul>
			</div>
		</div>

		<div class="form-group ">
			<%= f.add_nested_fields_link :menu_items, "+", class: "btn btn-info btn-xs top-buffer" %>
		</div>
	</div>
</div>
