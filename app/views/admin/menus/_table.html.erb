<table class="table table-striped">
	<thead>
		<tr>
			<th width="30%">Title</th>
			<th>Items</th>
			<th class="text-right">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @collection.each do |menu| %>
			<tr>
				<td><%= menu.title %></td>
				<td><%= menu.menu_items.count %></td>
				<td class="actions">
					<%= link_to "Edit", edit_admin_menu_path(menu), class: "btn btn-primary btn-xs" %>
					<%= link_to "Delete", admin_menu_path(menu), method: :delete, class: "btn btn-danger btn-xs" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
